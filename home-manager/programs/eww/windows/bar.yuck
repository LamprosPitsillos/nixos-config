(defwidget time []
(eventbox	:orientation "h" 
        :class "bar-time" 
        :halign "end"
        :onclick "scripts/popup calendar"
    (box :orientation "h" 
        (label :class "time-hour" :text "${time_json.hour}")
        (label :text ":")
        (label	:class "time-min"  :text "${time_json.minute}")
        )
    )
)


(defwidget cal []
    (box :class "cal-box" 
        :orientation "v"
        (box :class "cal-inner-box"
            (calendar :class "cal" 
                :show-details true
                :day "${calendar_json.day}" 
                :month ( "${calendar_json.month}" - 1 )
                :year "${calendar_json.year}"))))

(defwindow calendar
    :monitor 0
	:geometry (geometry :x "79%" 
						:y "1%" 
						:width "270px" 
						:height "60px")
    :namespace "calendar"
(cal))

(defwindow bar
    :monitor 0
    :geometry (geometry 
        :x "0%"
        :y "0%"
        :width "100%"
        :height "0%"
        :anchor "top center")
    :exclusive true
    :namespace "eww"
(smooth_bar) )

